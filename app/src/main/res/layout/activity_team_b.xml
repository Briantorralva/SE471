<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamB">

    <Button
        android:id="@+id/ReturnButton"
        android:layout_width="206dp"
        android:layout_height="107dp"
        android:onClick="TeamBReturnButton"
        android:text="Return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <TableLayout

        android:layout_width="771dp"
        android:layout_height="448dp"
        android:gravity="center"
        android:stretchColumns="0,1,2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#000000">

            <EditText
                android:id="@+id/TeamBBox1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="@color/light_blue"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text=" Enter Player"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/TeamBBox2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="@color/light_blue"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text=" Enter Player"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/TeamBBox3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:background="@color/light_blue"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text=" Enter Player"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#000000">

            <EditText
                android:id="@+id/TeamBBox4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="@color/light_blue"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text=" Enter Player"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/TeamBBox5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="@color/light_blue"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text=" Enter Player"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/TeamBBox6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:background="@color/light_blue"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text=" Enter Player"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>


    </TableLayout>

    <RelativeLayout
        android:id="@+id/TeamBTimeOut1"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gray_out_background"
        android:clickable="true"
        android:onClick="TeamBTimeOut1"
        android:focusable="true"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.655"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055">

        <!-- Logo -->
        <ImageView
            android:id="@+id/timeout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/iconDescription"
            android:src="@drawable/timeout" />

        <!-- Team Name -->
        <TextView
            android:id="@+id/Time_Out"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeout_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-47dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="sans-serif-medium"
            android:text="Time Out"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/TeamBTimeOut2"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gray_out_background"
        android:clickable="true"
        android:onClick="TeamBTimeOut2"
        android:focusable="true"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055">

        <!-- Logo -->
        <ImageView
            android:id="@+id/TeamBtimeout_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/iconDescription"
            android:src="@drawable/timeout" />

        <!-- Team Name -->
        <TextView
            android:id="@+id/TeamBTime_Out1"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/TeamBtimeout_icon1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-47dp"
            android:layout_marginEnd="51dp"
            android:fontFamily="sans-serif-medium"
            android:text="Time Out"
            android:textSize="30sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/TeamBSaveButton"
        android:layout_width="231dp"
        android:layout_height="90dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="76dp"
        android:text="Add Players"
        android:onClick="SaveTeamBPlayers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>